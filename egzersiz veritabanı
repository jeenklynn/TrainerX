% Kas gruplarını tanımlayalım
kas_grubu(gogus).
kas_grubu(sirt).
kas_grubu(bacak).
kas_grubu(kol).

% Egzersizleri tanımlayalım
egzersiz(bench_press, gogus).
egzersiz(dumbbell_fly, gogus).
egzersiz(push_up, gogus).
egzersiz(pull_up, sirt).
egzersiz(row, sirt).
egzersiz(deadlift, sirt).
egzersiz(squat, bacak).
egzersiz(leg_press, bacak).
egzersiz(lunges, bacak).
egzersiz(bicep_curl, kol).
egzersiz(tricep_extension, kol).
egzersiz(dumbbell_press, kol).

% Her egzersizin nasıl yapılması gerektiğini tanımlayalım
egzersiz_detayi(bench_press, 'Bench press, sırtüstü yatarken bir çubukla ağırlıkları itme egzersizidir. Göğüs kaslarını hedefler.').
egzersiz_detayi(dumbbell_fly, 'Dumbbell fly, sırtüstü yatarken dumbbell'larla göğüs kaslarını çalıştıran bir egzersizdir.').
egzersiz_detayi(push_up, 'Push-up, vücudu yerden iterek göğüs ve triceps kaslarını çalıştıran temel bir egzersizdir.').
egzersiz_detayi(pull_up, 'Pull-up, bir çubuğa asılarak yapılan ve sırt ve üst sırt kaslarını çalıştıran bir egzersizdir.').
egzersiz_detayi(row, 'Row, bir ağırlıkla sırt kaslarını çalıştırmak için çekme hareketini içeren bir egzersizdir.').
egzersiz_detayi(deadlift, 'Deadlift, bacak, sırt ve bel kaslarını hedefleyen ağırlık kaldırma egzersizidir.').
egzersiz_detayi(squat, 'Squat, bacak kaslarını güçlendirmek için yapılan bir temel egzersizdir.').
egzersiz_detayi(leg_press, 'Leg press, bacak kaslarını çalıştırmak için yapılan bir makineli egzersizdir.').
egzersiz_detayi(lunges, 'Lunges, bacak kaslarını dengeli bir şekilde geliştiren bir egzersizdir.').
egzersiz_detayi(bicep_curl, 'Bicep curl, kol biceps kaslarını hedefleyen bir egzersizdir.').
egzersiz_detayi(tricep_extension, 'Tricep extension, triceps kaslarını hedefleyen bir egzersizdir.').
egzersiz_detayi(dumbbell_press, 'Dumbbell press, omuz ve kol kaslarını çalıştıran bir egzersizdir.').

% Bir kas grubundaki tüm egzersizleri listeleyen bir kural
kas_egzersizleri(KasGrubu, EgzersizListesi) :-
    findall(Egzersiz, egzersiz(Egzersiz, KasGrubu), EgzersizListesi).

% Bir egzersizin detaylarını veren bir kural
egzersiz_detay(Egzersiz, Detay) :-
    egzersiz_detayi(Egzersiz, Detay).

% Örnek kullanım:
% Göğüs kasları için egzersizleri listele
% ?- kas_egzersizleri(gogus, EgzersizListesi).
%
% Bench press
% Dumbbell fly
% Push-up

% Bench press egzersizinin detaylarını al
% ?- egzersiz_detay(bench_press, Detay).
