% Verileri tutmak için kişilerin bilgileri
person(john, male, 30, 175, 80, 1.2).  % Ad, cinsiyet, yaş, boy (cm), kilo (kg), aktivite seviyesi

% BMI hesaplama
bmi(Name, BMI) :-
    person(Name, _, _, Height, Weight, _),
    BMI is Weight / ((Height / 100) * (Height / 100)).

% Beslenme önerisi
nutrition_recommendation(Name, Recommendation) :-
    bmi(Name, BMI),
    Recommendation = 'A personalized nutrition plan based on your BMI should be created.'.

% Egzersiz önerisi
exercise_recommendation(Name, Recommendation) :-
    person(Name, _, _, _, _, Activity),
    Recommendation = 'A personalized exercise plan based on your activity level should be created.'.

% Önerileri gösterme
show_recommendations(Name) :-
    nutrition_recommendation(Name, Nutrition),
    exercise_recommendation(Name, Exercise),
    write('Nutrition Recommendation: '), write(Nutrition), nl,
    write('Exercise Recommendation: '), write(Exercise).

% Örnek kullanım
?- show_recommendations(john).
